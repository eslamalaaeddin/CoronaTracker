<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid19">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/corona_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/corona_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".DetailedCountryActivity"
            android:parentActivityName=".activities.CountriesActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.CountriesActivity"
            android:label="Countries Status"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.MainActivity"
         >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>